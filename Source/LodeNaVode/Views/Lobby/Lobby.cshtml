@if ((string)ViewData["lobbyOwner"] == (string)ViewData["currentUser"])
{
    <h1>LOBBY OWNER</h1>
    <p>Vítejte ve vašem LOBBY!</p>
    <p>ID tohoto LOBBY je: <b>@ViewData["lobbyId"]</b></p>

    <h2>Zde vyberte herní mód:</h2>
    <div id="lobby">
        <form action="/Priprava/Zvolit">
            <input type="submit" value="Hrát!" class="game-mode-button" />
        </form>
    </div>

    <h2>Hráči v LOBBY:</h2>
    if (ViewData["vsichniHraciVLobby"] == null)
    {
        <p><i>V lobby nejsou žádní hráči.</i></p>
    }
    else
    {
        <table>
            @foreach (Player p in (List<Player>)ViewData["vsichniHraciVLobby"])
            {
                <tr>
                    <td>@p.PlayerName</td>
                </tr>
            }
        </table>
    }

    <div id="exit">
        <a href="/Lobby/Leave?from=Lobby" id="exitButton" class="exit-button">Opustit LOBBY</a>
    </div>

} 
else
{
    <h1>LOBBY</h1>
    <p>Vítejte v LOBBY!</p>
    <p>ID tohoto LOBBY je: <b>@ViewData["lobbyId"]</b></p>

    <h2>Hráči v LOBBY:</h2>
    if (ViewData["vsichniHraciVLobby"] == null)
    {
        <p><i>V lobby nejsou žádní hráči.</i></p>
    }
    else
    {
        <table>
            @foreach (Player p in (List<Player>)ViewData["vsichniHraciVLobby"])
            {
                <tr>
                    <td>@p.PlayerName</td>
                </tr>
            }
        </table>
    }

    <div id="exit">
        <a href="/Lobby/Leave?from=Lobby" id="exitButton" class="exit-button" >Opustit LOBBY</a>
    </div>
}
<style>
    .game-mode-button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 10px;
    }

    #mode2Button {
        background-color: #800080;
    }
    
    #mode3Button {
        background-color: #28a745;
    }

    #mode4Button {
        background-color: #ffc107;
    }

    .exit-button {
        display: inline-block;
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    table {
        border-collapse : collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
    }
</style>